= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :hour
    = f.time_select :hour
  .field
    = f.label :cupo
    = f.check_box :cupo
  .field
    = f.label :type_event
    = f.text_field :type_event
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.text_field :user_id
  .actions
    = f.submit 'Save'
